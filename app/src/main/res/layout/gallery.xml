<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gallery_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/gallery_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/remaining_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="250dp"
        android:paddingLeft="4dp"
        android:numColumns="4"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20" />

    <ImageView
        android:id="@+id/right_fold"
        android:layout_width="400dp"
        android:layout_height="460dp"
        android:background="@drawable/test_right_fold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.10" />

    <ImageView
        android:id="@+id/left_fold"
        android:layout_width="400dp"
        android:layout_height="460dp"
        android:background="@drawable/fold_with_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.10" />

    <GridView
        android:id="@+id/gallery_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="250dp"
        android:paddingLeft="4dp"
        android:numColumns="4"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20" />





</androidx.constraintlayout.widget.ConstraintLayout>