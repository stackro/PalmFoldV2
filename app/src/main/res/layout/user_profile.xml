<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:background="@drawable/user_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/user_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintVertical_bias="0.40"
        app:layout_constraintTop_toBottomOf="@+id/user_image"/>

    <TextView
        android:id="@+id/user_id"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:textColor="@color/textColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintVertical_bias="0.40"
        app:layout_constraintTop_toBottomOf="@+id/user_image" />

    <ImageView
        android:id="@+id/hand"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/holding_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintVertical_bias="0.60"
        app:layout_constraintTop_toBottomOf="@+id/user_id"/>

    <TextView
        android:id="@+id/dominant_hand"
        android:layout_width="125sp"
        android:layout_height="wrap_content"


        android:textSize="24sp"
        android:textColor="@color/textColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintVertical_bias="0.60"
        app:layout_constraintTop_toBottomOf="@+id/user_image" />

    <ImageView
        android:id="@+id/reach"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@drawable/reach_not_set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintVertical_bias="0.78"
        app:layout_constraintTop_toBottomOf="@+id/user_id"/>

    <TextView
        android:id="@+id/reachable"
        android:layout_width="125sp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/textColour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintTop_toBottomOf="@+id/dominant_hand" />

    <Button
        android:id="@+id/return_home"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/launch_direct_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintTop_toBottomOf="@+id/reachable"/>






</androidx.constraintlayout.widget.ConstraintLayout>